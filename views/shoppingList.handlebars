<div id="home">
  {{>navigation/nav-logout}}
  {{>navigation/nav-users}}
  <div class="container">
    <div class="tableContainer">
      <div class="row">
	    <div class="col-12">
	      <table id="shoppingList" class="centered responsive-table z-depth-5">
		    <thead>
		    <br>
		      <h3 class="center-align" id="greedy">I'M A GREEDY BASTARD - HERE IS MY LIST</h3>
		    <br>
		      <tr>
			    <th>ITEM</th>
			    <th>PRICE</th>
			    <th>COMMENTS</th>
			    <th>BUY IT</th>
			    <th>FIND ONLINE</th>
              </tr>
		   </thead>
             {{#each gift}}
			  <tbody>
			    <tr>
			      <td class="itemName"><h5>{{this.item}}</h5>
			      </td>
			      <td>{{this.price}}</td>
				  <td>{{this.comments}}</td>
				  <td data-id="{{this.id}}"><button class="large material-icons btn-floating btn-large waves-effect waves-light green delete">attach_money
					</button></td>
				  <td>
				  <form action="http://www.google.com/search" method="get">
					<input type="text" class="itemInput" name="q" value="{{this.item}}" />
					<input type="submit" id="online" target="_blank" value="Find Me Online" />
				  </form>
					<button class="nevermind">nevermind</button>
				</td>
			   </tr>
			 {{/each}}
			  </tbody>
			</table>
	    </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-8 offset-2">
      <ul id="wishList" class="list-group">
        {{#each gift}}
          <li data-id="{{this.id}}" data-uuid="{{this.userUuid}}" class="list-group-item">
            <h4>{{this.item}}</h4>
            <p>{{this.category}}</p>
            <p>{{this.price}}</p>
            <p>{{this.comments}}</p>
            <button class="btn btn-success float-right delete">PURCHASE</button>
            <form action="http://www.google.com/search" method="get">
              {{!-- <input type="text" class="itemInput" name="q" value="{{this.item}}"/> --}}
              <button type="submit" target="_blank" value="Find Me Online">Find Me Online</button>
            </form>
          </li>
        {{/each}}
      </ul>
    </div>
  </div>
</div>









