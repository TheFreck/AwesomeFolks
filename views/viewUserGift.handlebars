<div id="home">
	{{>navigation/nav-logout}}
  <div class="container">
    <div class="tableContainer">
      <div class="row">
        <div class="col-12">
		  <table class="centered responsive-table z-depth-5" id="wishList">
		    <thead>
		    <br>
		      <h3 class="center-align" id="greedy">I'M A GREEDY BASTARD - HERE IS MY LIST</h3>
		    <br>
		  <tr>
		    <th>ITEM</th>
			<th>PRICE</th>
			<th>COMMENTS</th>
			<th>ADD TO SHOPPING LIST</th>
			<th>FIND ONLINE</th>

		  </tr>
		  </thead>
            {{#each gift}}
			  <tbody class="center-align">
			    <tr class="center-align">
			      <td class="itemName">
				    <h5>{{this.item}}</h5>
			      </td>
			      <td>{{this.price}}</td>
				  <td>{{this.comments}}</td>
				 	<td><button data-item={{this.userUuid}} data-id="{{this.id}}" class="material-icons btn-floating btn-large waves-effect waves-light red shopping">add</button></td>
					<td><form action="http://www.google.com/search" method="get">
						<input type="text" class="itemInput" name="q" value="{{this.item}}" />
						<input type="submit" id="online" target="_blank" value="Find Me Online" />
					</form></td>
				</tr>
			{{/each}}
              </tbody>
	      </table>
	    </div>
	  </div>
	</div>
  </div>
</div>